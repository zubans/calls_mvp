{
  "info": {
    "_postman_id": "video-call-server-api",
    "name": "Video Call Server API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      },
      "response": []
    },
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/register",
          "host": ["{{base_url}}"],
          "path": ["register"]
        }
      },
      "response": []
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"identifier\": \"testuser\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/login",
          "host": ["{{base_url}}"],
          "path": ["login"]
        }
      },
      "response": []
    },
    {
      "name": "Create Room",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "{{auth_token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Room\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/create-room",
          "host": ["{{base_url}}"],
          "path": ["create-room"]
        }
      },
      "response": []
    },
    {
      "name": "Join Room",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "{{auth_token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"room_id\": \"{{room_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/join-room",
          "host": ["{{base_url}}"],
          "path": ["join-room"]
        }
      },
      "response": []
    },
    {
      "name": "Leave Room",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "{{auth_token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"room_id\": \"{{room_id}}\",\n  \"client_id\": \"{{client_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/leave-room",
          "host": ["{{base_url}}"],
          "path": ["leave-room"]
        }
      },
      "response": []
    },
    {
      "name": "List Rooms",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "{{auth_token}}"}],
        "url": {
          "raw": "{{base_url}}/rooms",
          "host": ["{{base_url}}"],
          "path": ["rooms"]
        }
      },
      "response": []
    },
    {
      "name": "Send Chat Message",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "{{auth_token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"room_id\": \"{{room_id}}\",\n  \"message\": \"Hello, world!\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/chat/send",
          "host": ["{{base_url}}"],
          "path": ["chat", "send"]
        }
      },
      "response": []
    },
    {
      "name": "Get Chat History",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "{{auth_token}}"}],
        "url": {
          "raw": "{{base_url}}/chat/history/{{room_id}}",
          "host": ["{{base_url}}"],
          "path": ["chat", "history", "{{room_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Start Recording",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "{{auth_token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"room_id\": \"{{room_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/recording/start",
          "host": ["{{base_url}}"],
          "path": ["recording", "start"]
        }
      },
      "response": []
    },
    {
      "name": "Stop Recording",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "{{auth_token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"recording_id\": \"{{recording_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/recording/stop",
          "host": ["{{base_url}}"],
          "path": ["recording", "stop"]
        }
      },
      "response": []
    },
    {
      "name": "List Recordings",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "{{auth_token}}"}],
        "url": {
          "raw": "{{base_url}}/recording/list/{{room_id}}",
          "host": ["{{base_url}}"],
          "path": ["recording", "list", "{{room_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Get Metrics",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "{{auth_token}}"}],
        "url": {
          "raw": "{{base_url}}/metrics",
          "host": ["{{base_url}}"],
          "path": ["metrics"]
        }
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {"type": "text/javascript", "exec": [""]}
    },
    {
      "listen": "test",
      "script": {"type": "text/javascript", "exec": [""]}
    }
  ],
  "variable": [
    {"key": "base_url", "value": "http://localhost:8080"},
    {"key": "auth_token", "value": ""},
    {"key": "room_id", "value": ""},
    {"key": "client_id", "value": ""},
    {"key": "recording_id", "value": ""}
  ]
}
